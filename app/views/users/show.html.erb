<body class="user-background">
  <div class="cards-container">
    <% if session[:user_id] == @user.id %>
    <div class="edit-profile"><%= link_to 'Edit Profile', edit_user_path %></div>
    <h3><%= @user.firstname%>'s Cards</h3>
    <div class="cardlist-wrapper">
    <% @cards.each do |card| %>
      <div class="card-wrapper">
        <div class="card-bx">
          <div class="card-num"><%= card.card_number %></div>
          <div class="card-exp"><%= card.exp_month %> / <%= card.exp_year %></div>
          <div class="card-type"><%= card.card_type %></div>
        </div>
          <div class="balance">Balance: $<%= card.balance %>0</div>
          <div class="edit-share"><%= link_to 'Edit', edit_card_path(card.id) %></div>
         <div class="edit-share"><%= link_to 'Share', share_path %></div>
      </div>
      <% end %>
      <div class="card-wrapper">
        <div class="card-bx">
          <div class="addcard-text"><%= link_to 'Add new card', new_card_path %></div>
        </div>
      </div>
    </div>
    <% else %>
    <div class="alert"><% flash[:alert] = "You must be logged in." %></div>
    <% end %>
</body>
