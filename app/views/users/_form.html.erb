<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |error| %>
      <p><%= error %></p>
      <% end %>
  <% end %>
	  <div class="f-label"><%=f.label :first_name %></div>
	  <div class="f-field"><%=f.text_field :firstname %></div>
    <div class="f-label"><%=f.label :last_name %></div>
    <div class="f-field"><%=f.text_field :lastname %></div>
    <div class="f-label"><%=f.label :email %></div>
    <div class="f-field"><%=f.email_field :email %></div>
    <div class="f-label"><%=f.label :phone %></div>
    <div class="f-field"><%=f.text_field :phone %></div>
    <div class="f-label"><%=f.label :password %></div>
    <div class="f-field"> <%=f.password_field :password %></div>
    <div class="f-label"><%=f.label :password_confirmation %></div>
    <div class="f-field"> <%=f.password_field :password_confirmation %></div>
  	<div class="create-user"><%=f.submit%></div>
<% end %>